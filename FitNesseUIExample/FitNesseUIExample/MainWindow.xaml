<Window x:Class="FitNesseUIExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitNesseUIExample"
        mc:Ignorable="d"
        Title="FitNesseUIExample" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="100 100">
            <DockPanel Margin="10">
                <TextBlock Text="Number to calculate with:" Width="200" Height="30" HorizontalAlignment="Left" />
                <TextBox x:Name="InputNumber"
                         MinWidth="300" Width="300" Height="30" />
            </DockPanel>
            <DockPanel Margin="10">
                <TextBlock Text="Result:" Width="200" Height="30" HorizontalAlignment="Left" />
                <TextBox x:Name="OutputResult"
                         MinWidth="300" Width="300" Height="30"  />
            </DockPanel>
            <Button Content="Calculate Times 2" x:Name="CalculateButton" Click="CalculateButton_Click"
                    Width="150" Height="30" Margin="0 40 50 0" HorizontalAlignment="Right"/>
        </StackPanel>
    </Grid>
</Window>
